<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.tamu.stmi.monopolysystem1.Update"
    tools:showIn="@layout/activity_update">

    <TextView
        android:id="@+id/nameView"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/UpdateTo1"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="76dp"
        android:text="Player1"
        android:textSize="9sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameView" />

    <Button
        android:id="@+id/UpdateTo2"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="Player2"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/UpdateTo1"
        app:layout_constraintTop_toBottomOf="@+id/nameView" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="136dp"
        android:text="Update"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/UpdateTo3"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginTop="76dp"
        android:text="Player3"
        android:textSize="9sp"
        app:layout_constraintEnd_toStartOf="@+id/UpdateTo4"
        app:layout_constraintStart_toEndOf="@+id/UpdateTo2"
        app:layout_constraintTop_toBottomOf="@+id/nameView" />

    <Button
        android:id="@+id/UpdateTo4"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="76dp"
        android:text="Player4"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/UpdateTo3"
        app:layout_constraintTop_toBottomOf="@+id/nameView" />

    <Button
        android:id="@+id/UpdateTo5"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:text="Player5"
        android:textSize="9sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdateTo1" />

    <Button
        android:id="@+id/BankButton"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Bank"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/UpdateTo6"
        app:layout_constraintTop_toBottomOf="@+id/UpdateTo3" />

    <Button
        android:id="@+id/UpdateTo6"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Player6"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/UpdateTo5"
        app:layout_constraintTop_toBottomOf="@+id/UpdateTo2" />

    <Switch
        android:id="@+id/mortageSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="304dp"
        android:text="Mortage"
        app:layout_constraintBottom_toTopOf="@+id/houseBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/houseBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="292dp"
        android:layout_height="22dp"
        android:layout_marginBottom="173dp"
        android:layout_marginEnd="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21dp"
        android:max="5"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@+id/updateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mortageSwitch" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="23dp"
        android:text="Houses"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mortageSwitch" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="6dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/houseBar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="6dp"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/houseBar" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="6dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/houseBar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="6dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/houseBar" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="6dp"
        android:text="4"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/houseBar" />

    <TextView
        android:id="@+id/tecc"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        android:text="Hotel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/houseBar" />

</android.support.constraint.ConstraintLayout>
